<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.RemoveClassPage"
             Shell.NavBarIsVisible="False"
             xmlns:viewmodel="clr-namespace:Project.ViewModel"
             xmlns:model="clr-namespace:Project1.Model"
             x:DataType="viewmodel:RemoveClassViewModel"
             Title="RemoveClassPage">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False"/>
    </Shell.BackButtonBehavior>
    
    <Grid>
        <!-- Background Image (same as LoginPage) -->
        <Image Source="loginbg.png" Aspect="AspectFill"/>
        
        <ScrollView>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header with User Profile -->
                <Border Grid.Row="0" 
                        StrokeShape="RoundRectangle 20"
                        BackgroundColor="White"
                        Stroke="#E0E0E0"
                        StrokeThickness="1"
                        Padding="20"
                        Margin="0,20,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Logo and App Name -->
                        <StackLayout Grid.Column="0" 
                                    Orientation="Horizontal" 
                                    VerticalOptions="Center">
                            <Image Source="logo.png"
                                  HeightRequest="50"
                                  WidthRequest="50"/>
                            <Label Text="Dino University"
                                  FontSize="24"
                                  FontAttributes="Bold"
                                  TextColor="#333333"
                                  VerticalOptions="Center"
                                  Margin="10,0,0,0"/>
                        </StackLayout>
                        
                        <!-- User Profile Info -->
                        <Border Grid.Column="1"
                                StrokeShape="RoundRectangle 15" 
                                Padding="15" 
                                BackgroundColor="#F8F9FA"
                                Stroke="#E0E0E0"
                                StrokeThickness="1">
                            <HorizontalStackLayout Spacing="15">
                                <StackLayout>
                                    <Label Text="{Binding Name}"
                                          FontSize="14"
                                          FontAttributes="Bold"
                                          TextColor="#333333"/>
                                    <Label Text="{Binding Uid}"
                                          FontSize="12"
                                          TextColor="#666666"/>
                                </StackLayout>
                                <BoxView WidthRequest="1" 
                                        BackgroundColor="#E0E0E0" 
                                        VerticalOptions="Fill"/>
                                <StackLayout VerticalOptions="Center">
                                    <Label Text="{Binding Department}"
                                          FontSize="12"
                                          TextColor="#666666"/>
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="ปีการศึกษา"
                                              FontSize="12"
                                              TextColor="#666666"/>
                                        <Label Text="{Binding YearOfStudy}"
                                              FontSize="12"
                                              FontAttributes="Bold"
                                              TextColor="#333333"/>
                                    </HorizontalStackLayout>
                                </StackLayout>
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Main Content Area -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Navigation Menu -->
                    <Border Grid.Column="0"
                            StrokeShape="RoundRectangle 20"
                            BackgroundColor="White"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            Padding="20"
                            Margin="0,0,20,0"
                            VerticalOptions="Start">
                        <StackLayout Spacing="15">
                            <Label Text="เมนู"
                                  FontSize="18"
                                  FontAttributes="Bold"
                                  TextColor="#333333"
                                  Margin="0,0,0,10"/>
                                  
                            <Button Text="ลงทะเบียน"
                                    BackgroundColor="#F0F0F0"
                                    TextColor="#333333"
                                    CornerRadius="12"
                                    HeightRequest="45"
                                    WidthRequest="180"
                                    Command="{Binding SearchPageCommand}"/>
                                    
                            <Button Text="ผลการลงทะเบียน"
                                    BackgroundColor="#F0F0F0"
                                    TextColor="#333333"
                                    CornerRadius="12"
                                    HeightRequest="45"
                                    WidthRequest="180"
                                    Command="{Binding RegisteredPageCommand}"/>
                                    
                            <Button Text="ถอนวิชาที่ลงทะเบียน"
                                    BackgroundColor="#4CAF50"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="12"
                                    HeightRequest="45"
                                    WidthRequest="180"/>
                                    
                            <Button Text="โปรไฟล์"
                                    BackgroundColor="#F0F0F0"
                                    TextColor="#333333"
                                    CornerRadius="12"
                                    HeightRequest="45"
                                    WidthRequest="180"
                                    Command="{Binding ProfilePageCommand}"/>
                                    
                            <BoxView HeightRequest="1"
                                     BackgroundColor="#E0E0E0"
                                     Margin="0,10"/>
                                     
                            <Button Text="ออกจากระบบ"
                                    BackgroundColor="#FF5252"
                                    TextColor="White"
                                    CornerRadius="12"
                                    HeightRequest="45"
                                    WidthRequest="180"
                                    Command="{Binding LogoutCommand}"/>
                        </StackLayout>
                    </Border>
                    
                    <!-- Right Content Area -->
                    <StackLayout Grid.Column="1" Spacing="20">
                        <!-- Filter Section -->
                        <Border StrokeShape="RoundRectangle 20"
                                BackgroundColor="White"
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                Padding="20">
                            <StackLayout Spacing="15">
                                <Label Text="ถอนวิชาที่ลงทะเบียน"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#333333"/>
                                       
                                <Grid ColumnSpacing="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Year Selection -->
                                    <Label Grid.Column="0"
                                           Text="ปีการศึกษา"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#444444"
                                           VerticalOptions="Center"/>
                                           
                                    <Border Grid.Column="1"
                                            StrokeShape="RoundRectangle 12"
                                            Stroke="#E0E0E0"
                                            StrokeThickness="1"
                                            Padding="0">
                                        <Picker SelectedItem="{Binding Year}"
                                                SelectedIndexChanged="Picker_SelectedIndexChanged"
                                                WidthRequest="120"
                                                HeightRequest="45"
                                                BackgroundColor="Transparent"
                                                TextColor="#333333">
                                            <Picker.ItemsSource>
                                                <x:Array Type="{x:Type x:String}">
                                                    <x:String>1</x:String>
                                                    <x:String>2</x:String>
                                                    <x:String>3</x:String>
                                                    <x:String>4</x:String>
                                                </x:Array>
                                            </Picker.ItemsSource>
                                        </Picker>
                                    </Border>
                                    
                                    <!-- Semester Selection -->
                                    <Label Grid.Column="2"
                                           Text="เทอม"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#444444"
                                           VerticalOptions="Center"
                                           Margin="20,0,0,0"/>
                                           
                                    <Border Grid.Column="3"
                                            StrokeShape="RoundRectangle 12"
                                            Stroke="#E0E0E0"
                                            StrokeThickness="1"
                                            Padding="0">
                                        <Picker SelectedItem="{Binding Semester}"
                                                SelectedIndexChanged="Picker_SelectedIndexChanged"
                                                WidthRequest="120"
                                                HeightRequest="45"
                                                BackgroundColor="Transparent"
                                                TextColor="#333333">
                                            <Picker.ItemsSource>
                                                <x:Array Type="{x:Type x:String}">
                                                    <x:String>1</x:String>
                                                    <x:String>2</x:String>
                                                    <x:String>3</x:String>
                                                </x:Array>
                                            </Picker.ItemsSource>
                                        </Picker>
                                    </Border>
                                </Grid>
                            </StackLayout>
                        </Border>
                        
                        <!-- Classes to Remove Section -->
                        <Border StrokeShape="RoundRectangle 20"
                                BackgroundColor="White"
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                Padding="20">
                            <StackLayout Spacing="15">
                                <Label Text="รายวิชาที่สามารถถอนได้"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#333333"/>
                                       
                                <CollectionView ItemsSource="{Binding Registers}" EmptyView="ไม่พบรายวิชาที่ลงทะเบียน">
                                    <CollectionView.ItemsLayout>
                                        <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="15" VerticalItemSpacing="15"/>
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="{x:Type model:Registered}">
                                            <Border Padding="15"
                                                    StrokeShape="RoundRectangle 15"
                                                    BackgroundColor="#F8F9FA"
                                                    Stroke="#E0E0E0"
                                                    StrokeThickness="1">
                                                <Grid ColumnSpacing="15">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackLayout Grid.Column="0" Spacing="8">
                                                        <Label Text="{Binding SubjectName}"
                                                               FontSize="16"
                                                               FontAttributes="Bold"
                                                               TextColor="#333333"/>
                                                               
                                                        <Label Text="{Binding SubjectId}"
                                                               FontSize="14"
                                                               TextColor="#666666"/>
                                                               
                                                        <HorizontalStackLayout Spacing="5">
                                                            <Label Text="Term:"
                                                                   FontSize="12"
                                                                   TextColor="#999999"/>
                                                            <Label Text="{Binding Semester}"
                                                                   FontSize="12"
                                                                   FontAttributes="Bold"
                                                                   TextColor="#333333"/>
                                                            
                                                            <Label Text="Grade:"
                                                                   FontSize="12"
                                                                   TextColor="#999999"
                                                                   Margin="10,0,0,0"/>
                                                            <Label Text="{Binding Grade, TargetNullValue='?'}"
                                                                   FontSize="12"
                                                                   FontAttributes="Bold"
                                                                   TextColor="#333333"/>
                                                        </HorizontalStackLayout>
                                                    </StackLayout>
                                                    
                                                    <Border Grid.Column="1"
                                                            StrokeShape="RoundRectangle 15"
                                                            Stroke="#E0E0E0"
                                                            StrokeThickness="0"
                                                            WidthRequest="50"
                                                            HeightRequest="50"
                                                            VerticalOptions="Center"
                                                            HorizontalOptions="End">
                                                        <ImageButton Source="delete.png"
                                                                    BackgroundColor="Transparent"
                                                                    WidthRequest="40"
                                                                    HeightRequest="40"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RemoveClassViewModel}}, Path=RemoveSelectCommand}"
                                                                    CommandParameter="{Binding SubjectId}"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>
                        </Border>
                    </StackLayout>
                </Grid>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>